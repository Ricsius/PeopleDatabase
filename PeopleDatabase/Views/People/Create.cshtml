@model PersonAddRequest
@{
    ViewBag.Title = "Create Person";
}

<a asp-controller="People" asp-action="Index" class="link-hover">Back to the People list</a>
<h2>Create Person</h2>

<div class="w-50">
    <form asp-controller="People" asp-action="Create" method="post">
        <div class="form-field flex">
            <div class="w-25">
                <label class="form-label pt" asp-for="Name">Name</label>
            </div>

            <div class="flex-1">
                <input class="form-input" asp-for="Name" />
            </div>
        </div>

        <div class="form-field flex">
            <div class="w-25">
                <label class="form-label pt" asp-for="Email">Email</label>
            </div>

            <div class="flex-1">
                <input class="form-input" asp-for="Email" />
            </div>
        </div>

        <div class="form-field flex">
            <div class="w-25">
                <label class="form-label pt" asp-for="DateOfBirth">Date of Birth</label>
            </div>

            <div class="flex-1">
                <input class="form-input" asp-for="DateOfBirth" />
            </div>
        </div>

        <div class="form-field flex">
            <div class="w-25">
                <label class="form-label" asp-for="Gender">Gender</label>
            </div>

            <div class="flex-1">
                @{
                    string[] genders = Enum.GetNames(typeof(GenderOptions));
                }
                @foreach (string gender in genders)
                {
                    <input type="radio" asp-for="Gender" value="@gender" />
                    <label for="@gender">@gender</label>
                }
            </div>
        </div>

        <div class="form-field flex">
            <div class="w-25">
                <label class="form-label" asp-for="CountryId">Country</label>
            </div>
            
            <div class="flex-1">
                <select class="form-input" asp-for="CountryId" asp-items="@ViewBag.Countries">
                    <option value="">Please select</option>
                </select>
            </div>
        </div>

        <div class="form-field flex">
            <div class="w-25">
                <label class="form-label pt" asp-for="Address">Address</label>
            </div>

            <div class="flex-1">
                <textarea class="form-input" asp-for="Address"></textarea>
            </div>
        </div>

        <div class="form-field flex">
            <div class="w-25">
            </div>

            <div class="flex-1">
                <input asp-for="ReceiveNewsLetters" value="true" />
                <label class="form-label" asp-for="ReceiveNewsLetters">Receive News Letters</label>
            </div>
        </div>

        <div class="form-field flex">
            <div class="w-25">
            </div>

            <div class="flex-1">
                <button class="button button-green-back" type="submit">Submit</button>

                @if (ViewBag.Errors != null)
                {
                    <div class="text-red ml">
                        <ul>
                            @foreach (string error in ViewBag.Errors)
                            {
                                <li class="ml">@error</li>
                            }
                        </ul>
                    </div>
                }
            </div>
        </div>
    </form>
</div>